      "--with-http_gzip_static_module",
      "--with-http_sub_module",
      "--add-module=/tmp/ngx_http_auth_pam_module-1.1"
    ]
  },
  "recipes": [
    "build-essential",
    "rvm",
    "rvm::rubies",
    "rvm::default_ruby",
    "nginx_http_auth_pam",
    "rvm_passenger",
    "rvm_passenger::nginx"
  ]
